{
  "name": "afeka-chatbot-frontend-tests",
  "private": true,
  "type": "module",
  "scripts": {
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "cypress:open": "cypress open",
    "cypress:run": "cypress run",
    "cypress:run:headless": "cypress run --headless",
    "cypress:run:chrome": "cypress run --browser chrome",
    "cypress:run:firefox": "cypress run --browser firefox",
    "e2e:user-journey": "cypress run --spec 'e2e/e2e/complete-user-journey.cy.js'",
    "e2e:admin": "cypress run --spec 'e2e/e2e/admin-workflow.cy.js'",
    "e2e:mobile": "cypress run --spec 'e2e/e2e/mobile-responsiveness.cy.js'",
    "e2e:multilingual": "cypress run --spec 'e2e/e2e/multilingual-support.cy.js'",
    "e2e:accessibility": "cypress run --spec 'e2e/e2e/accessibility.cy.js'",
    "e2e:all": "cypress run",
    "test:all": "npm run test && npm run e2e:all",
    "test:phase4": "npm run e2e:user-journey && npm run e2e:admin && npm run e2e:mobile && npm run e2e:multilingual && npm run e2e:accessibility"
  },
  "dependencies": {
    "@vitejs/plugin-react": "^4.3.4",
    "vitest": "^3.1.3",
    "@vitest/coverage-v8": "^3.2.4",
    "@testing-library/react": "^16.3.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/user-event": "^14.6.1",
    "jsdom": "^22.1.0",
    "msw": "^2.10.2",
    "@faker-js/faker": "^9.8.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "cypress": "^14.4.1",
    "@testing-library/cypress": "^10.0.3",
    "cypress-axe": "^1.6.0"
  }
}
