{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,    // הוספתי את זה
    "baseUrl": ".",                         // הוספתי את זה
    "paths": {                              // הוספתי את זה
      "@/*": ["src/*"]
    },
    "allowJs": true,                        // הוספתי את זה
    "esModuleInterop": true,                // הוספתי את זה
    "forceConsistentCasingInFileNames": true // הוספתי את זה
  },
  "include": ["src/**/*.ts", "src/**/*.tsx", "src/**/*.js", "src/**/*.jsx"],  // עדכנתי את זה
  "references": [{ "path": "./tsconfig.node.json" }]  // הוספתי את זה
}