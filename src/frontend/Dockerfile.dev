# Build stage
FROM node:20.10-alpine AS builder

# Add labels
LABEL maintainer="Afeka ChatBot Team"
LABEL version="1.0"
LABEL description="Frontend development service for Afeka College Regulations ChatBot"

# Set working directory
WORKDIR /app

# Install wget for healthcheck & git for npm
RUN apk add --no-cache wget git

# Copy package files
COPY package*.json ./

# Install dependencies with all optional dependencies explicitly
RUN npm config set ignore-scripts true && \
    npm install && \
    npm install @esbuild/linux-x64 --no-save && \
    npm config set ignore-scripts false && \
    npm cache clean --force

# Copy the rest of the application
COPY . .

# Set development-specific env vars
ENV VITE_SKIP_TS_CHECK=true
ENV NODE_ENV=development
ENV HOST=0.0.0.0
ENV PORT=5173

# Expose Vite's default port
EXPOSE 5173

# Define healthcheck
HEALTHCHECK --interval=30s --timeout=10s --start-period=30s --retries=3 \
  CMD wget --no-verbose --tries=1 --spider http://localhost:5173/ || exit 1

# Run in dev mode with host set to allow external connections
CMD ["npm", "run", "dev", "--", "--host", "0.0.0.0", "--port", "5173"] 